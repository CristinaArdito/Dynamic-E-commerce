<div class = "cont">
	<h1>Registrazione</h1>
	<hr>
	 <div id = "error"></div>
	<div class = "form">
		<h3>Crea un account</h3>
		<hr>
		    <form>
		    	<div class="form-group">
		        <label for="nome">Nome</label><br>
		        <input type="text" class="form-control"
		               ng-model="username"
		               size="50"
		               id="nome" name="name" required>
		        </div>
		        <div class="form-group">
		        <label for="nome">Indirizzo email</label><br>
		        <input type="text" class="form-control"
		               ng-model="email"
		               size="50"
		               id="nome" name="email" required>
		        </div>
		        <div class="form-group">
		        <label for="psw">Password</label><br>
		        <input type="password" class="form-control"
		               ng-model="password"
		               size="50"
		               id="psw" name="password" required>
		        </div>
		        <div class="form-group">
		        <label for="nome">Indirizzo</label><br>
		        <input type="text" class="form-control"
		               ng-model="address"
		               size="50"
		               id="nome" name="address" required>
		        </div>
		    <button type="submit" id="submitbutton" 
		            class="btn"  ng-click="signup()">Registra</button>
		    </form>

	</div>	    
</div>
